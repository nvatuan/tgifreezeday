# TGIFreezeDay Example Configuration

# Data source configuration
data_source:
  - type: google_calendar
    config:
      holiday_calendar_id: "your_calendar_id_with_holidays@group.calendar.google.com"
      calendar_id: "your_calendar_id@group.calendar.google.com"
    rules:
      - expression: "today.hasEvent('keyword')"
      - expression: "today.addDays(1).hasEvent()"
      - expression: "today.isWeekend()"

# Destination configuration
destination:
  type: google_calendar
  config:
    calendar_id: "your_primary_calendar@gmail.com"

